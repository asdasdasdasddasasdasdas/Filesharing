{% extends 'Layout/default.twig' %}


{% block content %}
    <div class="wrapper ">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-lg-12 col-xl-6 left-part">

                <form class="file-upload-form container-fluid" enctype="multipart/form-data" method="POST">

                    <h1 class="text-center  mb-4">Upload Files</h1>
                    <input type="hidden" name="MAX_FILE_SIZE" value="838860800"/>

                    <div class="custom-file-wrapper">
                        <div class="file-upload mb-4">
                            <label class="file-upload-label mx-0 mx-xl-5 text-center" id="label-1" for="file-1">
                    <span class="h6">
                        Choose file
                    </span>
                                <span class="button">Open</span></label>
                            <input id="file-1" class="input-file" name="file[]" type="file" multiple>

                        </div>
                    </div>
                    <div class="mx-xl-5"> {% for error in errors %}
                            <p class="text-danger">{{ error.message }}</p>
                        {% endfor %}</div>

                    <div class="btn btn-primary" id="add-input">add input</div>

                    <div class=" mb-4">
                        <label for="description">Description :</label>
                        <textarea class="form-control rounded-0" name="description"></textarea>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button class="btn px-5" type="submit">submit</button>
                    </div>
                    <input name="token" type="hidden" value="{{ token }}">


                </form>

            </div>
            <div class="col-12 col-lg-12 col-xl-6  d-none d-sm-none d-lg-block">
                <div class="row text-center">
                    <div class="dropzone text-center">
                        <h1 class="drag-and-drop">Drag and Drop</h1>
                    </div>
                    <div class="gallery-files mt-5 w-100">
                        <div class="row">

                        </div>
                    </div>

                    <form enctype="multipart/form-data" class="dropzone-form d-none mt-4 text-center w-100"
                          method="post">
                        <div class=" mb-4">
                            <label for="description">Description :</label>
                            <textarea class="description form-control rounded-0" name="description"></textarea>
                        </div>
                        <input type="hidden" name="MAX_FILE_SIZE" value="838860800"/>
                        <button id="dropzone-submit" name="asd" class="btn px-5" type="submit">submit</button>
                        <input name="token" type="hidden" value="{{ token }}">
                    </form>

                </div>
            </div>
        </div>
    </div>


{% endblock %}
{% block scripts %}
    <script type="text/javascript" src="js/upload.js"></script>
    <script type="text/javascript" src="/js/home.js"></script>
{% endblock %}